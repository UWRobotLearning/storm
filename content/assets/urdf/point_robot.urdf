<?xml version="1.0"?>
<robot name="point_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- <link name="base_link" /> -->
  <link name="base_link"/>

  <link name="robot">
    <!-- <collision>
      <geometry>
        <mesh filename="meshes/collision/link0.stl"/>
      </geometry>
    </collision> -->
  </link>
  <link name="robot_y">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
    </collision>
  </link>

  <joint name="x_joint" type="prismatic">
    <origin rpy="0 0 0" xyz="0 0 0.0"/>
    <parent link="base_link"/>
    <child link="robot"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.6" upper="0.6"/>
  </joint>

  <joint name="y_joint" type="prismatic">
    <origin rpy="0 0 0" xyz="0 0 0.0"/>
    <parent link="robot"/>
    <child link="robot_y"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.6" upper="0.6"/>

  </joint>


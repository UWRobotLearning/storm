<launch>
  <arg name="config" default="$(find storm_ros)/config/config_interactive_marker_tracking.yaml" doc="Path to parameter config file"/>

  <node name="interactive_marker_pub" pkg="storm_ros" type="interactive_marker_goal_publisher.py" output="screen" clear_params="true">
    <rosparam file="$(arg config)" />
  </node>

  <node name="reacher_node" pkg="storm_ros" type="reacher_node.py" output="screen" clear_params="true">
    <rosparam file="$(arg config)"/>
  </node>

  <node name="robot_world_pub" pkg="storm_ros" type="robot_world_publisher.py" output="screen" clear_params="true">
    <rosparam file="$(arg config)" />
  </node>

  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find storm_ros)/rviz/interactive_marker_tracking.rviz" />


</launch>